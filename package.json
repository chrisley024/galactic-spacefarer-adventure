{
  "name": "galactic_spacefarer_adventure",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "@sap/generator-fiori": "^1.14.3",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1.7.3",
    "@sap/eslint-plugin-cds": "^3.0.4",
    "@sap/ux-specification": "^1.120.16",
    "eslint": "^9.9.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-spacefarers": "cds watch --open spacefarers/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-spacefarer": "cds watch --open spacefarer/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "fiori": {
      "bypass_draft": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "mars": {
            "roles": [
              "user"
            ],
            "attr": {
              "planet": "Mars"
            }
          },
          "venus": {
            "roles": [
              "user"
            ],
            "attr": {
              "planet": "Venus"
            }
          },
          "admin": {
            "roles": [
              "admin"
            ]
          }
        }
      }
    }
  },
  "sapux": [
    "app/spacefarers",
    "app/spacefarer",
    "app/spacefarer"
  ]
}
